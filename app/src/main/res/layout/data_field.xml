<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dataField"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/background"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="7dp"
        android:background="@color/physTabAccent">

        <TextView
            android:id="@+id/imgHint"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/cambria"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/namings"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:padding="7dp"
        android:background="@color/physTabAccent">

        <TextView
            android:id="@+id/naming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/physTabAccent"
            android:layout_gravity="center"
            android:fontFamily="@font/cambria"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fieldCard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/dp7"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/dp7"
            android:backgroundTint="@color/physTabAccent"
            android:fontFamily="@font/roboto_bold"
            android:imeOptions="actionDone"
            android:inputType="numberSigned|numberDecimal"
            android:singleLine="true"
            android:textColorHint="@color/material_ripple_light"
            android:textSize="18sp"
            tools:ignore="Autofill,LabelFor" />

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>